<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="CustomTheme" parent="Theme.MaterialComponents">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="icon">@color/icons</item>
        <item name="colorAccent">@color/accent</item>
        <item name="divider">@color/divider</item>
    </style>

    <style name="Theme.Login" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colourPrimary</item>
        <item name="colorPrimaryVariant">@color/colourDarkPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colourAccent</item>
        <item name="colorSecondaryVariant">@color/colourSecondaryText</item>
        <item name="colorOnSecondary">@color/colourSecondaryText</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colourPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Login.NoActionBar" parent="Theme.MaterialComponents.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/colourPrimary</item>
        <item name="android:colorAccent">@color/colourAccent</item>
        <item name="colorSecondary">@color/colourSecondaryText</item>
        <item name="colorOnPrimary">@color/colourLightPrimary</item>
    </style>


</resources>