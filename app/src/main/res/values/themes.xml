<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="CustomTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="icon">@color/icons</item>
        <item name="colorAccent">@color/accent</item>
        <item name="divider">@color/divider</item>
    </style>


    <style name="Theme.Login.NoActionBar" parent="Theme.MaterialComponents.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/colourPrimary</item>
        <item name="android:colorAccent">@color/colourAccent</item>
        <item name="colorSecondary">@color/colourSecondaryText</item>
        <item name="colorOnPrimary">@color/colourLightPrimary</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:fontFamily"></item>
    </style>

    <style name="Theme.Login.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Login.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Login.Base" parent="Theme.MaterialComponents.DayNight">
        <item name="android:colorPrimary">@color/colourPrimary</item>
        <item name="colorPrimaryDark">@color/colourDarkPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorAccent">@color/colourAccent</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colourPrimary</item>

    </style>

    <style name="Theme.Login.Base.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Login.Base.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Login.Base.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>